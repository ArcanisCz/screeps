{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "baseUrl": "./",
    "sourceMap": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "experimentalDecorators": false,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "removeComments": true,
    "types": [
      "lodash",
      "screeps"
    ]
  }
}
