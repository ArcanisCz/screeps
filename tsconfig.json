{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "lib": [
      "dom",
      "es2016"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "baseUrl": "./",
    "sourceMap": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "removeComments": false,
    "types": [
      "lodash",
      "screeps"
    ]
  },
  "types": [
    "lodash",
    "screeps"
  ],
}
